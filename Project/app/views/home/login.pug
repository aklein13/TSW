extends ../layouts/default

block my_account
  include ../includes/myAccount
  +myAccount(user)

block content
  .container.container-detail.mt-5
    .row
      .col-md-12.order-md-1
        h4.mb-3 Login
        form.needs-validation(method='post')
          .mb-3
            label(for='email') Email
            input#email.form-control(name='email' type='email', placeholder='you@example.com', required)
            .invalid-feedback
              | Valid email is required.
          .mb-3
            label(for='password')
              | Password
              span.text-muted
            input#password.form-control(name='password' type='password', placeholder='Password', required)
            .invalid-feedback
              | Valid password is required.
          hr.mb-4
          button.btn.btn-primary.btn-lg.btn-block(type='submit') Login

