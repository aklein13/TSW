extends ../layouts/default

block content
  main(role='main')
    section.jumbotron.text-center
      .container.container-detail
        h1.jumbotron-heading #{offer.title}
        p.lead.text-muted
          span#offer_id.d-none #{offer._id}
          p #{offer.description}
          p
            span#offer_price #{offer.price}
            span &nbsp;zł
          if offer.type == 'buy_now' && user
            p
              button.btn.btn-danger.my-2(onclick='buy()') Buy now!
          else if user
            p
              input#bid.text-right(type='number' min=offer.price, placeholder=offer.price + 1 + ' zł')
              button.btn.btn-danger.my-2(onclick='bid()') Bid!
