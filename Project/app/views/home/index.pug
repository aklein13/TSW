extends ../layouts/default

block my_account
  include ../includes/myAccount
  +myAccount(user)

block content
  main(role='main')
    section.jumbotron.text-center
      .container
        h1.jumbotron-heading Ebay
        p.lead.text-muted
          | Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.
        if user
          p
            a.btn.btn-primary.my-2(href='/offers/new') Post new offer
    .album.py-5.bg-light
      .container
        .row
          each offer in offers
            .col-md-4(id='offer-' + offer._id)
              .card.mb-4.box-shadow
                img.card-img-top(data-src='holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail', alt='Card image cap')
                .card-body
                  p.card-text
                    | #{offer.title}
                  .d-flex.justify-content-between.align-items-center
                    .btn-group
                      a.btn.btn-sm.btn-outline-secondary(href='/offers/' + offer._id) View
                    p.text-primary(id='offer-' + offer._id + '-price') #{offer.price} zł
