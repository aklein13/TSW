extends ../layouts/default

block my_account
  include ../includes/myAccount
  +myAccount(user)

block content
  main(role='main')
    section.jumbotron.text-center
      .container
        h1.jumbotron-heading Ibej
        include ../includes/description
        if user
          p
            a.btn.btn-primary.my-2(href='/offers/new') Post new offer
    .album.py-5.bg-light
      .container
        .row
          each offer in offers
            .col-md-4(id='offer-' + offer._id)
              .card.mb-4.box-shadow
                img.card-img-top(src=offer.imageUrl || defaultImg, alt='Offer picture')
                .card-body
                  p.card-text
                    | #{offer.title}
                  .d-flex.justify-content-between.align-items-center
                    .btn-group
                      a.btn.btn-sm.btn-outline-secondary(href='/offers/' + offer._id) View
                    p.text-primary(id='offer-' + offer._id + '-price') #{offer.price} z≈Ç
